@model IEnumerable<SkyTravel.Models.Passenger>

<div class="row">
    <div class="col-md-9">
        <table class="table table-bordered">
            <h2>Lista de usuarios Registrados</h2>
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Document</th>
                <th>Email</th>
                <th>Telephone Number</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            </thead>
            <tbody>
            @if (Model == null)
            {
                <h1>No hay ningun pasajero registrado</h1>
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FullName</td>
                    <td>@item.Document</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>
                        <a  class="btn btn-primary" asp-action="Edit" asp-controller="Passenger" asp-route-id="@item.Id">Editar</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" onclick="return confirm('seguro que quieres Eliminar ?')" action="Delete" asp-controller="Passenger" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="col-md-3 sticky-top">
        <div class="card">
            <div class="card-body">
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show">
                        @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show">
                        @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
            
                <form asp-action="Register" method="post">
                    <div class="mt-3">
                        <label>FullName</label>
                        <input type="text" class="form-control" name="FullName" required>
                    </div>
                    <div class="mt-3">
                        <label>Document</label>
                        <input type="text" class="form-control" name="Document" required>
                    </div>
                    <div class="mt-3">
                        <label>Email</label>
                        <input type="email" class="form-control" name="Email" required>
                    </div>
                    <div class="mt-3">
                        <label>PhoneNumber</label>
                        <input type="text" class="form-control" name="PhoneNumber" required>
                    </div>
                    <hr>
                    <button type="submit" class="btn btn-primary w-100">Add User</button>
                </form>
            </div>
        </div>
    </div>
</div>