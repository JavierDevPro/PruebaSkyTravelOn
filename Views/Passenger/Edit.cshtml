@model SkyTravel.Models.Passenger
<div class="col-md-3 sticky-top">
    <div class="card">
        <div class="card-body">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            <form asp-action="Edit" method="post">
                <div class="mt-3">
                    <label>FullName</label>
                    <input type="text" class="form-control" name="FullName" required placeholder="@Model.FullName" value="@Model.FullName">
                </div>
                <div class="mt-3">
                    <label>Document</label>
                    <input type="text" class="form-control" name="Document" required placeholder="@Model.Document" value="@Model.Document">
                </div>
                <div class="mt-3">
                    <label>Email</label>
                    <input type="email" class="form-control" name="Email" required placeholder="@Model.Email" value="@Model.Email">
                </div>
                <div class="mt-3">
                    <label>PhoneNumber</label>
                    <input type="text" class="form-control" name="PhoneNumber" required placeholder="@Model.PhoneNumber" value="@Model.PhoneNumber">
                </div>
                <hr>
                <button type="submit" class="btn btn-primary w-100">Update User</button>
            </form>
        </div>
    </div>
</div>